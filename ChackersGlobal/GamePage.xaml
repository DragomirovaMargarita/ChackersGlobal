                <!-- Ð§ÐµÑ€Ð½Ñ‹Ðµ ÑˆÐ°ÑˆÐºÐ¸ -->
                <Border CornerRadius="18" BorderBrush="#C0C0C0" BorderThickness="3" Background="#23243B" Padding="16" Margin="0,0,0,18" Grid.Row="1">
                    <StackPanel>
