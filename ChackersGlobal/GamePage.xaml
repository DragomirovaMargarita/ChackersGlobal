    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="320"/>
        </Grid.ColumnDefinitions>
        <Image Source="ms-appx:///Assets/border_decor.png"
               Stretch="UniformToFill"
               Opacity="1"
