            <!-- Ð›ÐµÐ²Ñ‹Ð¹ Ð½Ð¸Ð¶Ð½Ð¸Ð¹ ÑƒÐ³Ð¾Ð» -->
            <Path Data="M0,56 Q28,0 56,0" Stroke="#FFD700" StrokeThickness="6" Fill="Transparent"
                  Width="56" Height="56" Canvas.Left="18" Canvas.Top="766">
                <Path.RenderTransform>
