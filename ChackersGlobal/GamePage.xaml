            </Grid>

            <!-- ÐšÐ½Ð¾Ð¿ÐºÐ¸ ÑƒÐ¿Ñ€Ð°Ð²Ð»ÐµÐ½Ð¸Ñ -->
            <StackPanel Grid.Row="3" Margin="0,20,0,0">
                <Button x:Name="SaveGameButton"
                        Content="Save Game"
