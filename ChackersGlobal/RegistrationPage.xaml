<Page
    x:Class="Chackers.RegistrationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Chackers"
    Background="Transparent">
    <Grid>
        <Image Source="Assets/background.png" Stretch="UniformToFill" Opacity="0.3"/>
        <Border x:Name="MainBorder" 
                Background="#FFF9F6F2" 
                CornerRadius="20" 
                Padding="40" 
                Width="400" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center">
            <StackPanel Spacing="20">
                <TextBlock Text="Registration"
                           Style="{StaticResource TitleTextBlockStyle}"
                           HorizontalAlignment="Center"
                           Margin="0,50,0,50"
                           FontSize="36"
                           FontFamily="Luminari, Trajan Pro, Copperplate Gothic, Algerian, Segoe UI"
                           Foreground="#FFD700"/>
                <TextBox x:Name="UsernameBox"
                         PlaceholderText="Enter username"
                         Width="300"
                         Height="40"
                         FontSize="20"
                         FontFamily="Luminari, Trajan Pro, Copperplate Gothic, Algerian, Segoe UI"/>
                <PasswordBox x:Name="PasswordBox"
                             PlaceholderText="Enter password"
                             Width="300"
                             Height="40"
                             FontSize="20"
                             FontFamily="Luminari, Trajan Pro, Copperplate Gothic, Algerian, Segoe UI"/>
                <TextBlock x:Name="MessageBlock" Foreground="Red" FontSize="14" TextWrapping="Wrap"/>
                <Button x:Name="RegisterButton"
                        Content="Register"
                        Click="RegisterButton_Click"
                        Style="{StaticResource MedievalButtonStyle}"
                        Width="300"
                        Height="60"
                        FontSize="24"
                        FontFamily="Luminari, Trajan Pro, Copperplate Gothic, Algerian, Segoe UI"/>
                <Button x:Name="LoginButton"
                        Content="Login"
                        Click="LoginButton_Click"
                        Style="{StaticResource MedievalButtonStyle}"
                        Width="300"
                        Height="60"
                        FontSize="24"
                        FontFamily="Luminari, Trajan Pro, Copperplate Gothic, Algerian, Segoe UI"/>
            </StackPanel>
        </Border>
    </Grid>
</Page> 