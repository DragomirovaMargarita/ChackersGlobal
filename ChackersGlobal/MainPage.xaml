<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Chackers.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Chackers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="BoardSquareStyle" TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Rectangle Fill="{TemplateBinding Background}"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="320"/>
        </Grid.ColumnDefinitions>

        <!-- Базовый коричневый фон -->
        <Rectangle Fill="#2C1810"/>

        <!-- Фоновое изображение -->
        <Image Source="ms-appx:///Assets/background.png" 
               Stretch="UniformToFill" 
               Opacity="0.8"/>

        <!-- Основной контент -->
        <Grid x:Name="BoardGrid" Grid.Column="0" Width="960" Height="960">
            <Grid.Background>
                <ImageBrush x:Name="BoardBackground" Stretch="UniformToFill"/>
            </Grid.Background>
        </Grid>
        <Canvas x:Name="AnimationCanvas" Grid.Column="0" Width="960" Height="960" Background="Transparent" IsHitTestVisible="False"/>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Choose Your Dragon"
                       Style="{StaticResource TitleTextBlockStyle}"
                       HorizontalAlignment="Center"
                       Margin="0,50,0,50"
                       FontSize="36"
                       FontFamily="Luminari, Trajan Pro, Copperplate Gothic, Algerian, Segoe UI"
                       Foreground="#FFD700"/>

            <!-- Добавляем панель с информацией о ходе и счетчиками -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Текст текущего хода -->
                <TextBlock x:Name="TurnText"
                           Text="White's Turn"
                           Foreground="#FFD700"
                           FontSize="24"
                           FontFamily="Luminari, Trajan Pro, Copperplate Gothic, Algerian, Segoe UI"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Счетчики -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Белые шашки -->
                    <StackPanel Grid.Column="0" Margin="10">
                        <TextBlock Text="White Dragons"
                                   Foreground="#FFD700"
                                   FontSize="20"
                                   HorizontalAlignment="Center"/>
                        <TextBlock x:Name="WhiteActiveCount"
                                   Text="12"
                                   Foreground="#FFD700"
                                   FontSize="18"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Captured:"
                                   Foreground="#FFD700"
                                   FontSize="16"
                                   HorizontalAlignment="Center"/>
                        <TextBlock x:Name="WhiteCapturedCount"
                                   Text="0"
                                   Foreground="#FFD700"
                                   FontSize="16"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Черные шашки -->
                    <StackPanel Grid.Column="1" Margin="10">
                        <TextBlock Text="Black Dragons"
                                   Foreground="#FFD700"
                                   FontSize="20"
                                   HorizontalAlignment="Center"/>
                        <TextBlock x:Name="BlackActiveCount"
                                   Text="12"
                                   Foreground="#FFD700"
                                   FontSize="18"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Captured:"
                                   Foreground="#FFD700"
                                   FontSize="16"
                                   HorizontalAlignment="Center"/>
                        <TextBlock x:Name="BlackCapturedCount"
                                   Text="0"
                                   Foreground="#FFD700"
                                   FontSize="16"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- Существующий контент -->
                <StackPanel Grid.Row="2" 
                            VerticalAlignment="Center" 
                            HorizontalAlignment="Center"
                            Spacing="40">
                    <TextBlock Text="Select your dragon:"
                               Foreground="#FFD700"
                               FontSize="24"
                               FontFamily="Luminari, Trajan Pro, Copperplate Gothic, Algerian, Segoe UI"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>

                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                Spacing="40">
                        <StackPanel>
                            <Button x:Name="WhiteButton" 
                                    Click="WhiteButton_Click"
                                    Style="{StaticResource MenuButtonStyle}"
                                    Width="200"
                                    Height="200"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Padding="0">
                                <Grid>
                                    <Ellipse Width="150" Height="150">
                                        <Ellipse.Fill>
                                            <ImageBrush x:Name="WhitePieceImage"
                                                       ImageSource="ms-appx:///Assets/white_piece.png"
                                                       Stretch="Uniform"/>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                </Grid>
                            </Button>
                            <TextBlock x:Name="WhiteDragonText"
                                       Text="White Dragon" 
                                       Foreground="#FF1493" 
                                       FontSize="24" 
                                       FontWeight="Bold"
                                       FontFamily="Luminari, Trajan Pro, Copperplate Gothic, Algerian, Segoe UI"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,0"
                                       Opacity="0"/>
                        </StackPanel>

                        <StackPanel>
                            <Button x:Name="BlackButton" 
                                    Click="BlackButton_Click"
                                    Style="{StaticResource MenuButtonStyle}"
                                    Width="200"
                                    Height="200"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Padding="0">
                                <Grid>
                                    <Ellipse Width="150" Height="150">
                                        <Ellipse.Fill>
                                            <ImageBrush x:Name="BlackPieceImage"
                                                       ImageSource="ms-appx:///Assets/black_piece.png"
                                                       Stretch="Uniform"/>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                </Grid>
                            </Button>
                            <TextBlock x:Name="BlackDragonText"
                                       Text="Black Dragon" 
                                       Foreground="#00BFFF" 
                                       FontSize="24" 
                                       FontWeight="Bold"
                                       FontFamily="Luminari, Trajan Pro, Copperplate Gothic, Algerian, Segoe UI"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,0"
                                       Opacity="0"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <Button x:Name="StartGameButton" 
                    Content="Start Game" 
                    Click="StartGameButton_Click"
                    Style="{StaticResource MenuButtonStyle}"
                    Width="300"
                    Height="60"
                    FontSize="24"
                    Margin="0,0,0,40"
                    Opacity="0.5"
                    IsEnabled="False"
                    Grid.Row="1"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Center">
                <Button.Resources>
                    <Storyboard x:Name="StartButtonAnimation">
                        <DoubleAnimation 
                            Storyboard.TargetName="StartGameButton"
                            Storyboard.TargetProperty="Opacity"
                            From="0.5" To="1.0" Duration="0:0:0.3"
                            AutoReverse="True" RepeatBehavior="Forever"/>
                    </Storyboard>
                </Button.Resources>
            </Button>

            <Button x:Name="BackButton" 
                    Content="Back" 
                    Click="BackButton_Click"
                    Style="{StaticResource MenuButtonStyle}"
                    Grid.Row="2"
                    Width="200"
                    Height="50"
                    FontSize="20"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center"/>
        </Grid>

        <!-- Диалог сохранения игры -->
        <ContentDialog x:Name="SaveGameDialog"
                      Title="Save Game"
                      PrimaryButtonText="Save"
                      SecondaryButtonText="Cancel"
                      DefaultButton="Primary">
            <StackPanel>
                <TextBlock Text="Enter save name:"
                           Margin="0,0,0,10"
                           Foreground="#FFD700"/>
                <TextBox x:Name="SaveNameTextBox"
                         PlaceholderText="Enter save name..."
                         Width="300"
                         Margin="0,0,0,10"/>
            </StackPanel>
        </ContentDialog>
    </Grid>
</Page>
